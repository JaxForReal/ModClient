<UserControl x:Class="ModClientUI.UsernameDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModClientUI"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock Name="usernameText" Text="username" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" />
        <TextBlock Name="tripcodeText" Text="trip" Visibility="Collapsed"/>
    </StackPanel>
</UserControl>